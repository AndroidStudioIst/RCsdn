    <com.angcyo.uiview.viewgroup.RLinearLayout
        android:id="@+id/card_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg_selector_v21"
        android:orientation="vertical"
        android:padding="@dimen/base_hdpi"
        app:r_draw_line="BOTTOM">

        <TextView
            android:id="@+id/title_view"
            style="@style/BaseMainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.angcyo.uiview.widget.RExTextView
            android:id="@+id/des_view"
            style="@style/BaseDarkTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_ldpi"
            app:r_max_show_line="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/time_view"
                style="@style/BaseDarkTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_hdpi" />

            <TextView
                android:id="@+id/view_count_view"
                style="@style/BaseDarkTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_hdpi" />

        </LinearLayout>

    </com.angcyo.uiview.viewgroup.RLinearLayout>

    <!--</android.support.v7.widget.CardView>-->

</FrameLayout>